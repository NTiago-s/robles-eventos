---
import Layout from "../layouts/Layout.astro";
import FAQ from "../sections/FAQ.astro";
import Hero from "../sections/Hero.astro";
import Contact from "../sections/Contact.astro";
import Services from "../sections/Services.astro";

export const prerender = true;
---

<Layout
  title="Los Robles Eventos"
  description="Los Robles ofrece servicios completos para eventos: catering, decoración, DJ, barra de tragos, mozos, ambientación y organización de fiestas. Creamos momentos inolvidables para cumpleaños, casamientos, aniversarios, eventos empresariales y más."
>
  <Hero />
  <Services />
  <FAQ />
  <Contact />
</Layout>

<script type="application/ld+json" is:inline>
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "headline": "Los Robles Eventos",
    "description": "Los Robles ofrece servicios completos para eventos: catering, decoración, DJ, barra de tragos, mozos, ambientación y organización de fiestas. Creamos momentos inolvidables para cumpleaños, casamientos, aniversarios, eventos empresariales y más.",
    "image": "https://los-robles-eventos.com/logo-robles-metadata.png",
    "author": {
      "@type": "Person",
      "name": "Los Robles"
    },
    "publisher": {
      "@type": "LocalBusiness",
      "name": "Los Robles",
      "logo": {
        "@type": "ImageObject",
        "url": "https://los-robles-eventos.com/logo-robles-metadata.png"
      }
    },
    "datePublished": "2025-10-19"
  }
</script>
