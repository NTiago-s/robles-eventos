---
import SectionContainer from "../../components/SectionContainer.astro";
import Layout from "../../layouts/Layout.astro";
import EventCard from "../../components/EventCard.astro";
import { events } from "../../utils/events";

const slugify = (str: any) =>
  str
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/[^\w\s-]/g, "")
    .trim()
    .replace(/\s+/g, "-");
---

<Layout
  title="Galería de Eventos"
  description="Explorá nuestra galería de eventos: fotos de cumpleaños de 15, bodas, aniversarios y celebraciones organizadas por Los Robles."
>
  <SectionContainer id="galeria">
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-16">
      Galeria de Eventos
    </h2>
    <div class="grid grid-cols-3 gap-6">
      {
        events.map((event) => (
          <EventCard
            image={event.image}
            title={event.title}
            href={`/eventos/${slugify(event.title)}`}
          />
        ))
      }
    </div>
  </SectionContainer>
</Layout>
