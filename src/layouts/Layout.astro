---
import "../styles/global.css";
import Header from "../sections/Header.astro";
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#171717" />
    <meta
      name="keywords"
      content="los robles, los robles eventos, eventos, salon de eventos coronel suarez, catering, decoración de eventos, mozos, barra de tragos, DJ para fiestas, cumpleaños de 15, organización de eventos, casamientos, aniversarios, fotos de eventos, Los Robles eventos, servicios para eventos, fiesta completa, ambientación de eventos, servicio gastronómico"
    />
    <meta name="author" content="Los Robles" />

    <meta property="og:url" content="https://los-robles-eventos.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Los Robles Eventos" />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://los-robles-eventos.com/favicon.ico"
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="los-robles-eventos.com" />
    <meta property="twitter:url" content="https://los-robles-eventos.com" />
    <meta name="twitter:title" content="Los Robles Eventos" />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://los-robles-eventos.com/favicon.ico"
    />

    <link rel="canonical" href="https://los-robles-eventos.com/" />
    <link rel="preload" as="image" href="/madera-hero.webp" type="image/webp" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <div class="fixed -z-50 h-screen w-full bg-neutral-900">
      <div
        class="absolute inset-0 bg-indigo-900 bg-[size:20px_20px] opacity-20 blur-[100px]"
      >
      </div>
    </div>
    <Header />
    <slot />
  </body>
</html>
