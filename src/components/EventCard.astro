---
// EventCard.astro
const { image, title, href } = Astro.props;
---

<a href={href} class="block">
  <div
    class="relative max-w-sm rounded-xl overflow-hidden shadow-md bg-white group cursor-pointer"
  >
    <img
      class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
      src={image}
      alt={title}
    />
    <div
      class="absolute bottom-0 left-0 w-full bg-black/60 bg-opacity-60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 p-2"
    >
      <h3
        class="text-white text-sm font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
        {title}
      </h3>
    </div>
  </div>
</a>
