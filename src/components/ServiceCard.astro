---
const { id, title, icon, description } = Astro.props;
---

<article
  class="px-4 py-2 flex w-full items-center gap-4 bg-neutral-900 shadow-xl border border-fuchsia-900 rounded-md"
  id={id}
>
  <div
    class="min-w-9 min-h-9 flex items-center rounded justify-center bg-fuchsia-900"
  >
    <i class={icon}></i>
  </div>
  <div class="flex flex-col my-4 gap-2">
    <h3 class="font-semibold text-fuchsia-400 text-nowrap text-sm sm:text-base">
      {title}
    </h3>
    <p class="opacity-90 font-light text-xs sm:text-sm text-pretty">
      {description}
    </p>
  </div>
</article>
